<context>
	<office-floor>
		<offices>
			<office name="OFFICE" source="OFFICE" location="office" />
		</offices>
	</office-floor>
	<office>
		<escalations>
			<!-- Reverse order to ensure order by type -->
			<escalation escalation-type="java.lang.Exception">
				<handler section="SECTION" input="INPUT" />
			</escalation>
			<escalation escalation-type="java.sql.SQLException">
				<handler section="SECTION" input="INPUT" />
			</escalation>
			<escalation escalation-type="java.io.IOException">
				<handler section="SECTION" input="INPUT" />
			</escalation>
		</escalations>
		<sections>
			<section name="SECTION" source="SECTION" location="section">
				<input name="INPUT" />
			</section>
		</sections>
	</office>
	<section>
		<function-namespaces>
			<function-namespace name="NAMESPACE" source="CLASS">
				<properties>
					<property name="class.name" value="${testcase}$EscalationClass" />
				</properties>
				<managed-function name="handle">
					<managed-function-object name="java.lang.Throwable"
						parameter="true" />
				</managed-function>
			</function-namespace>
		</function-namespaces>
		<functions>
			<function name="INPUT" function-namespace="NAMESPACE"
				managed-function="handle" public="true" />
		</functions>
	</section>
</context>