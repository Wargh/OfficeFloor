<verifications>
	<files>
		<!-- Ensure using latest version -->
		<file>
			<location>${basedir}/../bom/pom.xml</location>
			<contains><![CDATA[<dependencyManagement>[^;]*<artifactId>${project.artifactId}</artifactId>[^;]*</dependencyManagement>]]></contains>
		</file>

		<!-- Ensure all the modules inheriting latest -->
		<file>
			<location>officespring/pom.xml</location>
			<contains><![CDATA[<version>${project.version}</version>(\s)*</parent>]]></contains>
		</file>
		<file>
			<location>officespring_data/pom.xml</location>
			<contains><![CDATA[<version>${project.version}</version>(\s)*</parent>]]></contains>
		</file>

	</files>
</verifications>