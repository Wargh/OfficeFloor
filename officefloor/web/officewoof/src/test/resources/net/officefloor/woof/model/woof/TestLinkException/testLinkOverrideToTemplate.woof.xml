<woof>

	<application-paths>
		<application-path path="/path" />
		<application-path path="/pathLink" />
	</application-paths>

	<templates>
		<template path="/template" />
		<template path="/templateLink" />
	</templates>

	<sections>
		<section name="SECTION">
			<input name="INPUT" />
		</section>
		<section name="SECTION_LINK">
			<input name="INPUT" />
		</section>
	</sections>

	<securities>
		<security name="SECURITY" />
		<security name="SECURITY_LINK" />
	</securities>

	<resources>
		<resource path="/resource" />
		<resource path="/resourceLink" />
	</resources>

	<exceptions>
		<exception class="A" />
		<exception class="B">
			<template path="/templateLink" />
		</exception>
	</exceptions>

</woof>