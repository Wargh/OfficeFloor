<verifications>
	<files>
		<!-- Ensure using latest version -->
		<file>
			<location>${basedir}/../../pom.xml</location>
			<contains><![CDATA[<dependencyManagement>[^;]*<artifactId>${project.artifactId}</artifactId>[^;]*</dependencyManagement>]]></contains>
		</file>

		<!-- Core eclipse modules are inheriting correct version -->
		<file>
			<location>net.officefloor.eclipse.ide/META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Bundle-Version: ${project.version}]]></contains>
		</file>
		<file>
			<location>net.officefloor.eclipse.launch/META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Bundle-Version: ${project.version}]]></contains>
		</file>
		<file>
			<location>net.officefloor.eclipse.section/META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Bundle-Version: ${project.version}]]></contains>
		</file>
		<file>
			<location>net.officefloor.eclipse.woof/META-INF/MANIFEST.MF</location>
			<contains><![CDATA[Bundle-Version: ${project.version}]]></contains>
		</file>
		<file>
			<location>net.officefloor.feature/feature.xml</location>
			<contains><![CDATA[<feature[^;]*version="${project.version}"[^;]*provider-name="OfficeFloor"]]></contains>
		</file>
		<file>
			<location>net.officefloor.woof.feature/feature.xml</location>
			<contains><![CDATA[<feature[^;]*version="${project.version}"[^;]*provider-name="OfficeFloor"]]></contains>
		</file>
	</files>
</verifications>