<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.officefloor.viewer</groupId>
		<artifactId>viewer</artifactId>
		<version>${revision}</version>
	</parent>
	<artifactId>officeviewer</artifactId>
	<name>OfficeFloor Viewer</name>
	<description>Viewer of OfficeFloor configuration</description>
	<dependencies>
		<dependency>
			<groupId>net.officefloor.eclipse</groupId>
			<artifactId>net.officefloor.eclipse.shade</artifactId>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>jdk8-tools-on-classpath-fix</id>
			<activation>
				<jdk>1.8</jdk>
			</activation>
			<dependencies>
				<dependency>
					<groupId>java.compiler</groupId>
					<artifactId>tools</artifactId>
					<version>1.8</version>
					<scope>system</scope>
					<systemPath>${java.home}/../lib/tools.jar</systemPath>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>openjfx</id>
			<activation>
				<jdk>[10,12)</jdk>
			</activation>
			<dependencies>
				<dependency>
					<groupId>org.openjfx</groupId>
					<artifactId>javafx-graphics</artifactId>
					<version>${openjfx-version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>org.openjfx</groupId>
					<artifactId>javafx-controls</artifactId>
					<version>${openjfx-version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>org.openjfx</groupId>
					<artifactId>javafx-swt</artifactId>
					<version>${openjfx-swt-version}</version>
					<scope>provided</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
</project>